# Configuration Nginx pour NegusLunar
# À placer dans /etc/nginx/sites-available/neguslunar

server {
    listen 80;
    listen [::]:80;
    
    # Remplace par ton domaine ou IP
    server_name neguslunar.kaflow.com;
    
    # Chemin vers les fichiers buildés
    root /var/www/neguslunar;
    index index.html;
    
    # Logs
    access_log /var/log/nginx/neguslunar_access.log;
    error_log /var/log/nginx/neguslunar_error.log;
    
    # Compression Gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;
    
    # Route principale - gère le routing React
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Cache pour les assets statiques
    location ~* \.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Sécurité - empêcher l'accès aux fichiers cachés
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

